<?xml version="1.0" encoding="UTF-8"?>
<FORM xmlns="http://www.custsystems.com/2009/plugins"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	  xsi:schemaLocation="http://www.custsystems.com/2009/plugins /WEB-INF/metadata/xsd/custerp.xsd">
	<WIDGETS>
		<WIDGET NAME="LIST" CLASS_REF="LIST">
			<PROPERTIES>
				<PROPERTIES NAME="WINDOW">
					<PROPERTY NAME="CAPTION" LVALUE="LIST_CAPTION"/>
					<PROPERTY NAME="WINDOW_WIDTH" VALUE="100"/>
					<PROPERTY NAME="WINDOW_HEIGHT" VALUE=""/>
				</PROPERTIES>
			</PROPERTIES>
			<COLUMNS>
				<COLUMN FIELDNAME="ID" HFLEX="min"/>
				<COLUMN FIELDNAME="TYPE" HFLEX="min" VISIBLE="false"/>
				<COLUMN FIELDNAME="CAPTION" HFLEX="1"/>
				<COLUMN FIELDNAME="DESCRIPTION" HFLEX="1" VISIBLE="false"/>
			</COLUMNS>
			<FILTER_PANEL>
				<COMPONENT FIELDNAME="ID"/>
				<COMPONENT FIELDNAME="CAPTION"/>
			</FILTER_PANEL>
			<ACTIONS>
				<ACTIONGROUP NAME="DEFAULT.READONLY"/>
			</ACTIONS>
		</WIDGET>

		<WIDGET NAME="SELECT" CLASS_REF="LIST">
			<PROPERTIES>
				<PROPERTIES NAME="WINDOW">
					<PROPERTY NAME="CAPTION" LVALUE="SELECT_CAPTION"/>
					<PROPERTY NAME="WINDOW_WIDTH" VALUE="80"/>
					<PROPERTY NAME="WINDOW_HEIGHT" VALUE="80"/>
				</PROPERTIES>
			</PROPERTIES>
			<COLUMNS>
				<COLUMN FIELDNAME="ID" HFLEX="min"/>
				<COLUMN FIELDNAME="TYPE" HFLEX="min" VISIBLE="false"/>
				<COLUMN FIELDNAME="CAPTION" HFLEX="1"/>
				<COLUMN FIELDNAME="DESCRIPTION" HFLEX="1" VISIBLE="false"/>
			</COLUMNS>
			<FILTER_PANEL>
				<COMPONENT FIELDNAME="ID"/>
				<COMPONENT FIELDNAME="CAPTION"/>
			</FILTER_PANEL>
			<ACTIONS>
				<ACTIONGROUP NAME="DEFAULT.SELECT"/>
			</ACTIONS>
		</WIDGET>

		<WIDGET NAME="UPDATE" CLASS_REF="ITEM">
			<PROPERTIES>
				<PROPERTIES NAME="WINDOW">
					<PROPERTY NAME="CAPTION" LVALUE="VIEW_CAPTION"/>
					<PROPERTY NAME="WINDOW_WIDTH" VALUE="450px"/>
					<PROPERTY NAME="WINDOW_HEIGHT" VALUE=""/>
				</PROPERTIES>
				<PROPERTIES NAME="LIST">
					<PROPERTY NAME="PROPERTY_WIDTH" VALUE="20%"/>
					<PROPERTY NAME="VALUE_WIDTH" VALUE="80%"/>
				</PROPERTIES>
			</PROPERTIES>
			<COMPONENTS>
				<COMPONENT FIELDNAME="ID"/>
				<COMPONENT FIELDNAME="TYPE"/>
				<COMPONENT FIELDNAME="CAPTION"/>
				<COMPONENT FIELDNAME="DESCRIPTION"/>
			</COMPONENTS>
		</WIDGET>
	</WIDGETS>
</FORM>